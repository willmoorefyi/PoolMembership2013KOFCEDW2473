<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="true">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS z}, %-5p: [%t] %C.%M.%L: %m%n</pattern>
		</encoder>
	</appender>
	
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>C:\logs\gaeTest.log</file>
    <append>true</append>
   <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	  <FileNamePattern>gaeTest.%d{yyyy-MM-dd}.log</FileNamePattern>
	</rollingPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS z}, %-5p: [%t] %C.%M.%L: %m%n</pattern>
    </encoder>
  </appender>
        

   <!-- Spring loggers -->
	<logger name="org.springframework.beans" level="info"/>
	<logger name="org.springframework.transaction" level="info"/>
	<logger name="org.springframework.web" level="debug"/>
	<logger name="org.springframework.orm.jdo.JdoTransactionManager" level="info"/>

   <!-- Application Logger -->
   <logger name="com.columbusclubevents" level="debug" />
   
	<root level="INFO">
		<appender-ref ref="STDOUT"/>
      <appender-ref ref="FILE"/>
	</root>
</configuration>